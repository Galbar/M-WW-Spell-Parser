{
  "name": "Magicka: Wizard Wars Spell Parser",
  "version": "2.0.2",
  "description": "Add-on that converts M:WW spells into elements icons.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "background": { "scripts": ["main.js"] },
  "icons" : {
    "48" : "icon.png"
  },
  "browser_action":   {
    "default_icon": "icon.png",
    "default_title": "Magicka: Wizard Wars Spell Parser"
  },
  "manifest_version": 2
}

